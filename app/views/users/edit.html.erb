<div> <%= link_to("<< back to dashboard", dashboard_path) %> </div>
<div> <%= link_to("<< back to manage account", manage_path, :class => 'back-link') %> </div>

<h1> edit account </h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.text_field :fname, placeholder: "First Name" %>
  </div>

  <div>
    <%= f.text_field :lname, placeholder: "Last Name" %>
  </div>

  <div>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>

  <div>
    <%= f.text_field :email, placeholder: "Email" %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div>
    <%= f.submit "edit account" %>
  </div>
<% end %>
